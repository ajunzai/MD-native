{
  "name": "md-native",
  "version": "0.1.0",
  "private": true,
  "main": "main.ts",
  "author": "x_junzai",
  "description": "my md Electron",
  "scripts": {
    "start:js": "react-scripts start",
    "start:tailwind": "tailwindcss build src/index.css -o src/tailwind.css",
    "start:css": "yarn start:tailwind",
    "start": "npm-run-all start:css start:js",
    "build:js": "react-scripts build",
    "build:tailwind": "cross-env NODE_ENV=production tailwindcss build src/index.css -o src/tailwind.css",
    "build:css": "yarn build:tailwind",
    "eject": "react-scripts eject",
    "commit": "git-cz",
    "electron": "wait-on http://localhost:3000 && electron .",
    "react": "cross-env BROWSER=false yarn start",
    "dev": "concurrently \"yarn electron\" \" yarn start:tailwind && yarn react\""
  },
  "dependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "autoprefixer": "^9",
    "node-sass": "4.14.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^11.2.0",
    "electron-is-dev": "^1.2.0",
    "wait-on": "^5.2.1"
  }
}
